{
  "name": "git-hours-gnome",
  "version": "0.2.0",
  "description": "Show work hours by git commits.",
  "repository": "git+https://github.com/ceigh/git-hours-gnome.git",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "git",
    "hours",
    "gnome",
    "extension"
  ],
  "author": "Artjom LÃ¶bsack",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ceigh/git-hours-gnome/issues"
  },
  "homepage": "https://github.com/ceigh/git-hours-gnome#readme",
  "private": true,
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3"
  },
  "eslintConfig": {
    "extends": "standard",
    "globals": {
      "imports": true
    },
    "rules": {
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 0,
          "maxBOF": 0
        }
      ],
      "space-before-function-paren": ["error", "never"]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  }
}
